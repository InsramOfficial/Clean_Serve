@using Fastfood.Models;
@model Category;

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <title>Create Customer</title>
    <style>
        body {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin-top: 0px;
            background: #ADC4CE;
        }

        .background {
            border: 1px solid #F1F0E8;
            background: #F1F0E8;
            padding: 40px;
            border-radius: 8px;
        }

        button {
            float: right;
        }
    </style>
</head>

<body>

    <div class="container">
        <div class="row">
            <div class="col-md-12"></div>
            <div class="col-md-12 background">
                <form method="post" asp-action="Edit" asp-controller="ControlPanel">
                    <h2 class="text-center">Update Category</h2>
                    <hr>
                    <div class="form-group">
                        <label asp-for="CategoryName">First Name:</label>
                        <input asp-for="CategoryName" type="text" class="form-control" placeholder="Enter Category Name">
                        <input asp-for="CategoryId" type="hidden" />
                    </div>
                    <hr>
                    <button class="btn btn-secondary"><a style="color:white;" asp-action="Index" asp-controller="ControlPanel">Back</a></button>
                    <button type="submit" class="btn btn-success">Update</button>
                </form>
            </div>
            <div class="col-md-12"></div>
        </div>
    </div>
</body>
</html>